format-disconnected = <label-disconnected>
format-packetloss   = <animation-packetloss> <label-connected>

label-connected               = "    %ifname% Ôá∫ %downspeed%"
label-disconnected            = "Ôá∫ Not connected"
label-disconnected-foreground = ${colors.base02}
label-packetloss-foreground   = ${colors.alert}

animation-packetloss-0            = ‚ö†
animation-packetloss-1            = üì∂
